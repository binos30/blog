<div class="d-flex justify-content-between">
  <h2>Articles</h2>
  <div>
    <% if user_signed_in? %>
      <%= link_to new_article_path, class: 'btn btn-primary btn-sm' do %>
        <i class="fas fa-plus"></i>
        New Article
      <% end %>
    <% end %>
  </div>
</div>

<p>Our blog has <%= pluralize(Article.public_count, "article") %> and counting!</p>

<div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <div class="col">
        <div class="card h-100">
          <img src="https://via.placeholder.com/20x10" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article %></h5>
            <p class="card-text"><%= article.body %></p>
          </div>
          <div class="card-footer">
            <small class="text-muted">Last updated 3 mins ago</small>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
