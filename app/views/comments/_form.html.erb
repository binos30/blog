<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="d-flex flex-column col-md-8 add-comment-section mt-4 mb-4">
    <img class="img-fluid img-responsive rounded-circle mb-2" src="https://i.imgur.com/qdiP4DB.jpg" width="38">
    <%= form.text_area :body, class: 'form-control mb-3', placeholder: 'Add comment' %>
    <%= form.submit class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>